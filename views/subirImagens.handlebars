<!--Title-->
<h1 class="text-black"> Subir Imagem para a Galeria :)</h1>

<!--Form-->
<form action="/upload" method="post" enctype="multipart/form-data">
    <!--Input Image Container-->
    <div class="containerForm">
        <!--Local onde fica o input com o button-->
        <div class="headerInput">
            <!--Input-->
            <input type="file" name="file" accept="image/*" id="inputIMG" required>
            <!--Button-->
            <button type="submit" class="btn btn-outline-primary">Subir Imagem</button>
        </div>
        <!--Fim do Local onde fica o input com o button-->
    </div>
    <!--Fim do Input Image Container-->
</form>